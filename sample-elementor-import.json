{
  "version": "0.4",
  "title": "Hero Section Import",
  "type": "section",
  "content": [
    {
      "id": "hero-section-1",
      "elType": "section",
      "settings": {
        "background_background": "gradient",
        "background_color": "#667eea",
        "background_color_b": "#764ba2",
        "background_gradient_angle": {
          "unit": "deg",
          "size": 135
        },
        "padding": {
          "unit": "px",
          "top": "100",
          "bottom": "100"
        }
      },
      "elements": [
        {
          "id": "hero-content",
          "elType": "column",
          "settings": {
            "width": 100
          },
          "elements": [
            {
              "id": "hero-title",
              "elType": "widget",
              "widgetType": "heading",
              "settings": {
                "title": "Chào mừng đến với tương lai",
                "size": "h1",
                "color": "#ffffff",
                "typography_typography": "custom",
                "typography_font_size": {
                  "unit": "px",
                  "size": 48
                },
                "typography_font_weight": "600"
              }
            },
            {
              "id": "hero-subtitle",
              "elType": "widget",
              "widgetType": "text-editor",
              "settings": {
                "editor": "<p>Khám phá các giải pháp công nghệ tiên tiến</p>",
                "text_color": "#ffffff",
                "typography_typography": "custom",
                "typography_font_size": {
                  "unit": "px",
                  "size": 18
                }
              }
            },
            {
              "id": "hero-button",
              "elType": "widget",
              "widgetType": "button",
              "settings": {
                "text": "Bắt đầu ngay",
                "link": {
                  "url": "#contact",
                  "is_external": "",
                  "nofollow": ""
                },
                "button_type": "primary",
                "button_text_color": "#ffffff",
                "background_color": "#ff6b6b",
                "border_radius": {
                  "unit": "px",
                  "top": "25",
                  "right": "25",
                  "bottom": "25",
                  "left": "25"
                }
              }
            }
          ]
        }
      ]
    }
  ]
}
