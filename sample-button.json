{
  "name": "Call to Action Button",
  "description": "Button CTA với hiệu ứng hover và animation. Có thể tùy chỉnh màu sắc và kích thước.",
  "category": "element",
  "tags": ["button", "cta", "hover", "animation", "responsive"],
  "code_json": {
    "type": "button",
    "settings": {
      "text": "Liên hệ ngay",
      "url": "#contact",
      "target": "_self",
      "animation": {
        "type": "fadeInUp",
        "delay": "0.2s"
      }
    },
    "style": {
      "backgroundColor": "#007cba",
      "color": "#ffffff",
      "padding": "12px 24px",
      "borderRadius": "5px",
      "fontSize": "16px",
      "fontWeight": "600",
      "textDecoration": "none",
      "transition": "all 0.3s ease",
      "border": "2px solid #007cba"
    },
    "hover": {
      "backgroundColor": "transparent",
      "color": "#007cba",
      "transform": "translateY(-2px)",
      "boxShadow": "0 4px 8px rgba(0, 124, 186, 0.3)"
    },
    "responsive": {
      "mobile": {
        "fontSize": "14px",
        "padding": "10px 20px"
      },
      "tablet": {
        "fontSize": "15px",
        "padding": "11px 22px"
      }
    }
  },
  "elementor_data": {
    "id": "cta_button_modern",
    "elType": "widget",
    "widgetType": "button",
    "settings": {
      "text": "Liên hệ ngay",
      "link": {
        "url": "#contact",
        "is_external": "",
        "nofollow": ""
      },
      "align": "center",
      "size": "md",
      "button_type": "primary",
      "background_color": "#007cba",
      "border_border": "solid",
      "border_width": {
        "unit": "px",
        "top": "2",
        "right": "2",
        "bottom": "2",
        "left": "2"
      },
      "border_color": "#007cba",
      "border_radius": {
        "unit": "px",
        "top": "5",
        "right": "5",
        "bottom": "5",
        "left": "5"
      },
      "padding": {
        "unit": "px",
        "top": "12",
        "right": "24",
        "bottom": "12",
        "left": "24"
      },
      "typography_typography": "custom",
      "typography_font_size": {
        "unit": "px",
        "size": 16
      },
      "typography_font_weight": "600",
      "hover_background_color": "transparent",
      "hover_color": "#007cba",
      "hover_animation": "grow",
      "_animation": "fadeInUp",
      "_animation_delay": 200,
      "custom_css": ".elementor-button { transition: all 0.3s ease; } .elementor-button:hover { transform: translateY(-2px); box-shadow: 0 4px 8px rgba(0, 124, 186, 0.3); }"
    }
  }
}
